<html>
   <head>
      <title>Boardbank</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap -->
      <link rel="stylesheet" type="text/css" href="theme.css">
      
      <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
      <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
      <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->
   </head>
   <body>
      <div class="container">
        <!-- Side bar -->
   
         <!-- Static navbar -->
         <nav class="navbar navbar-inverse" role="navigation">
            <div class="navbar-header">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="/">Boardbank</a>
            </div>
            <div class="navbar-collapse collapse">
               <ul class="nav navbar-nav">
                  <li><a href="http://www.greaterpcf.org/">Greater Poweshiek Community Foundation</a></li>
                  <% if user_signed_in? %>
                  <% @id = current_user.id %>
                  <li><%= link_to 'Profile', controller: "profile", action: "show_user", id: @id %></li>
                  <li><a href="/organizations">Organizations</a></li>
                  <% else %>
                  <% end %>
                  <% if organization_signed_in? %>
                  <% @id = current_organization.id %>
                  <li><%= link_to 'Profile', controller: "profile", action: "show_org", id: @id %></li>
                  <li><a href="/organizations">Organizations</a></li>
                  <li><a href="/users">Users</a></li>
                  <% else %>
                  <% end %>
               </ul>
               <ul class="nav navbar-nav navbar-right">
               </ul>
            </div>
            <!--/.nav-collapse -->
         </nav>
         <div>
            <%if @error then %>
            <div class="alert alert-error"><%=@error%></div>
            <% end %>
            <%= yield %>
         </div>
      </div>
      
           <header class="cd-header">
	<h1>Content Filter</h1>
</header>
 
<main class="cd-main-content">
	<div class="cd-tab-filter-wrapper">
		<div class="cd-tab-filter">
			<ul class="cd-filters">
				<li class="placeholder"> 
					<a data-type="all" href="#0">All</a> <!-- selected option on mobile -->
				</li> 
				<li class="filter"><a class="selected" href="#0" data-type="all">All</a></li>
				<li class="filter" data-filter=".color-1"><a href="#0" data-type="color-1">Color 1</a></li>
				<li class="filter" data-filter=".color-2"><a href="#0" data-type="color-2">Color 2</a></li>
			</ul> <!-- cd-filters -->
		</div> <!-- cd-tab-filter -->
	</div> <!-- cd-tab-filter-wrapper -->
 
	<section class="cd-gallery">
		<ul>
			<li class="mix color-1 check1 radio2 option3"><img src="img/img-1.jpg" alt="Image 1"></li>
			<li class="mix color-2 check2 radio2 option2"><img src="img/img-2.jpg" alt="Image 2"></li>
			<li><!-- ... --></li>
			<li class="gap"></li>
		</ul>
		<div class="cd-fail-message">No results found</div>
	</section> <!-- cd-gallery -->
 
	<div class="cd-filter">
		<form>
			<div class="cd-filter-block">
				<h4>Block title</h4>
				
				<div class="cd-filter-content">
					<!-- filter content -->
				</div> <!-- cd-filter-content -->
			</div> <!-- cd-filter-block -->
		</form>
 
		<a href="#0" class="cd-close">Close</a>
	</div> <!-- cd-filter -->
 
	<a href="#0" class="cd-filter-trigger">Filters</a>
</main> <!-- cd-main-content -->



      <div id = 'content' class='container' >
         <div class= 'span9 main' >
            <div class = "jumbotron" >
               <style>table, th, td {
                  border: 1px solid black;
                  border-collapse: collapse;
                  }
               </style>
               <div class="col-sm-3 col-md-3">
                  <%= form_tag search_orgs_path, class: 'navbar-form', method: :get do%>
                  <div class="input-group">
                     <%= text_field_tag :q, params[:q], size: 300, placeholder: "Search", class: "form-control"%>
                  </div>
                  <%= submit_tag 'Search', class: 'btn btn-success' %>
                  <div class="input-group-btn">
                     <%= button_tag(type: "submit", class: "btn btn-default") do %>
                     <i class="glyphicon glyphicon-search"></i>
                     <% end %>
                  </div>
                  <% end %>
               </div>
               <%= form_tag search_orgs_path, method: :get do%>
               <%= label_tag("Search for:") %>
               <%= text_field_tag(:q, params[:q]) %>
               <%= submit_tag("Search") %>
               <% end %>
               <div class="container">
                  <div class="row">
                     <div class="span9"><%= yield %></div>
                     <div class="span3">
                        <h2>List of Organizations</h2>
                        <% if user_signed_in? || organization_signed_in? %>
                        <ul class = "list-group">
                           <% if @orgs.empty?%>
                           <p style="font: 14pt/10pt Garamond, Georgia, serif; text-indent: 40px;"> 
                              Organization Not Found
                           </p>
                           <% else %>
                           <% @orgs.each do |org| %>
                           <% @id = org.id %>
                           <li href="#" class="list-group-item">
                              <span style="font-family:Georgia;font-size:30px;font-style:normal;font-weight:bold;text-transform:uppercase;letter-spacing:1px;line-height:4px;">
                              <%= link_to org.orgname, controller: "profile", action: "show_org", id: @id %>
                              </span>
                              <p class="list-group-item-text">
                              <p style="font: 14pt/10pt Garamond, Georgia, serif; text-indent: 40px;">
                                 <%= org.org_city %>
                              <p style="font: 14pt/10pt Garamond, Georgia, serif; text-indent: 40px;">
                                 <%= org.orgabout %>
                              <p style="font: 14pt/10pt Garamond, Georgia, serif; text-indent: 40px;">
                                 <%= org.email %>
                              </p>
                              <% end %>
                           </li>
                        </ul>
                        <% end %>
                        <%end %>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>