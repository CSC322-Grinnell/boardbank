<div class="container">
      <div class="row">
        <div class="span9"><%= yield %></div>
        <div class="span3">
<h2>Sign up as a User</h2>
</div>
</div>
</div>

<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<br/>



<div class="form-group">
    <%= f.label :First_Name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :firstname, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Last_Name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :lastname, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Address, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :address, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :City, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :city, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :State, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
      <%= subregion_select(:user, :state, Carmen::Country.coded('US'), {}, class: "form-control", autofocus: true) %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Zip_Code, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :zipcode, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Phone_Number, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.telephone_field :phonenumber, class: "form-control",autofocus: true %>
    </div>
</div>

<hr/>

<div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>


<div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Release_of_information, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <p>I understand that the Greater Poweshiek Community Foundation will share this profile with its member nonprofits upon their request as they have board or other volunteer leadership opportunities available. These organizations will contact me directly, utilizing the contact information provided. The submission of this profile does not guarantee placement, nor does GPCF select or recruit potential leadership volunteers on behalf of nonprofit agencies.</p>
    </div>
</div>


<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <p><b>By clicking sign up you agree to the release of information above.</b></p>
        <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= link_to "Back", :back %>
    </div>
</div>

<% end %>
