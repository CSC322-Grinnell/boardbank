
<!DOCTYPE html>
<html>
<head>
<title>Boardbank</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<!-- Bootstrap -->
<link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container">
<!-- Static navbar -->
<nav class="navbar navbar-inverse" role="navigation">
<div class="navbar-header">
<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
<span class="sr-only">Toggle navigation</span>
<span class="icon-bar"></span>
<span class="icon-bar"></span>
<span class="icon-bar"></span>
</button>
<a class="navbar-brand" href="/">Boardbank</a>
</div>
<div class="navbar-collapse collapse">
<ul class="nav navbar-nav">
<li><a href="http://www.greaterpcf.org/">Greater Poweshiek Community Foundation</a></li>
<% if user_signed_in? %>
<% @id = current_user.id %>
<li><%= link_to 'Profile', controller: "profile", action: "show_user", id: @id %></li>
<li><a href="/organizations">Organizations</a></li>
<% else %>
<% end %>
<% if organization_signed_in? %>
<% @id = current_organization.id %>
<li><%= link_to 'Profile', controller: "profile", action: "show_org", id: @id %></li>
<li><a href="/organizations">Organizations</a></li>
<li><a href="/users">Users</a></li>
<% else %>
<% end %>
</ul>

<ul class="nav navbar-nav navbar-right">

</ul>

</div><!--/.nav-collapse -->
</nav>
<div>
<%if @error then %>
<div class="alert alert-error"><%=@error%></div>
<% end %>
<%= yield %>
</div>
</div>

<div id = 'content' class='container' >
  <div class= 'span9 main' >
<div class = "jumbotron" >

<h2> <%= @org.orgname %> </h2>
  <% if @org.orgabout %>
  <li>
  About:
 <%= @org.orgabout %>
  </li>
  <% end %>

 <% if @org.org_city && @org.org_state %>
  <li>
  Location:
  <%= @org.org_city+", "+@org.org_state %>
  </li>
  <% end %>
  <li>
  Contact:
  <br>
   Email: <%= @org.email %> <br/>
  <% if @org.org_telephone %>
   Phone: <%= @org.org_telephone %> <br/>
  <% end %>
  </li>
<br/>
  <% if @org == current_organization %>
     <%= link_to "Edit Profile", edit_organization_registration_path, :method => :get, :class => 'btn btn-default' %>
<br/>
<% end %>
<%= link_to "Home", root_path, :method => :get, :class => 'btn btn-default' %>
</div>
</div>
</div>
