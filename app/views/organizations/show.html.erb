<div id = 'content' class='container' >
  <div class= 'span9 main' >
    <div class = "col-md-8 col-md-offset-2" >
      <h2>
        <% if @org.orgname %>
          <%= @org.orgname %>
        <% else %>
          Name not provided.
        <% end %>
      </h2>
      <br/>
      <ul class="list-group">
        <h4>About:</h4>
        <li class="list-group-item">
          <span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>&nbsp;
          <% if @org.orgabout %>
            <%= @org.orgabout %>
          <% else %>
            About not provided.
          <% end %>
        </li>
      </ul>
      <ul class="list-group">
        <h4>Location:</h4>
        <li class="list-group-item">
          <span class="glyphicon glyphicon-globe" aria-hidden="true"></span>&nbsp;
          <% if @org.org_city.blank? && @org.org_state.blank? %>
            Not provided.
          <% else %>
            <%= @org.org_city+", "+@org.org_state %>
          <% end %>
        </li>
      </ul>
      <ul class="list-group">
        <h4>Contact:</h4>
        <li class="list-group-item">
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>&nbsp;
          <% if @org.org_contactname %>
            <%= @org.org_contactname %>
          <% else %>
            Contact name not provided.
          <% end %>
        <li class="list-group-item">
          <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>&nbsp;
          <%= @org.email %>
        </li>
        <li class="list-group-item">
          <span class="glyphicon glyphicon-earphone" aria-hidden="true"></span>&nbsp;
          <% if @org.org_telephone %>
            <%= number_to_phone(@org.org_telephone, area_code: true) %>
          <% else %>
            Not provided.
          <% end %>
        </li>
      </ul>
      <br/>
      <% if @org == current_organization %>
        <%= link_to "Edit Profile", edit_organization_registration_path, :method => :get, :class => 'btn btn-danger' %>
        <br/>
      <% end %>
      <!-- <%= link_to "Home", root_path, :method => :get, :class => 'btn btn-default' %> -->
    </div>
  </div>
</div>
