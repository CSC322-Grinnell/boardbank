<div class="container">
      <div class="row">
        <div class="span9"><%= yield %></div>
        <div class="span3">
<h2>Sign up as an Organization</h2>
</div>
</div>
</div>

<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<br/>

<div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>


<div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<hr>

<div class="form-group">
    <%= f.label :Organization_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :orgname, class: "form-control",autofocus: true %>
    </div>
</div>


<div class="form-group">
    <%= f.label :About, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :orgabout, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
    </div>
</div>

<% end %>
