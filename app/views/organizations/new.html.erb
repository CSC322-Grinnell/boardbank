<div class="container">
      <div class="row">
        <div class="span9"><%= yield %></div>
        <div class="span3">
<h2>Sign up as an Organization</h2>
</div>
</div>
</div>

<hr>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<br/>

<div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.email_field :email, class: "form-control" %>
    </div>
</div>

<div class="form-group">
    <%= f.label :password, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
</div>


<div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
</div>

<hr>

<div class="form-group">
    <%= f.label :Organization_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Contact_Name, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :contact_name, class: "form-control",autofocus: true %>
    </div>
</div>


<div class="form-group">
    <%= f.label :About, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_area :about,cols: 10, rows: 8, class: "form-control",autofocus: true %>
    </div>
</div>

<hr/>

<div class="form-group">
    <%= f.label :Address, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :address, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :City, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :city, class: "form-control",autofocus: true %>
    </div>
</div>

<div class="form-group">
    <%= f.label :State, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= subregion_select(:organization, :state, Carmen::Country.coded('US'), {include_blank: true}, class: "form-control", autofocus: true) %>
    </div>
</div>

<div class="form-group">
    <%= f.label :Zip_Code, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.text_field :zipcode, class: "form-control",autofocus: true %>
    </div>
</div>


<div class="form-group">
    <%= f.label :Phone_Number, class: "col-sm-2 control-label" %>
    <div class="col-sm-6">
        <%= f.telephone_field :telephone, class: "form-control",autofocus: true %>
    </div>
</div>



<hr/>


<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= f.submit "Sign up", class: "btn btn-default" %>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
        <%= link_to "Back", :back %>
    </div>
</div>

<% end %>
