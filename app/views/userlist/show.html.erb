<html>
   <head>
      <title>Boardbank</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <!-- Bootstrap -->
      <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
      <%= stylesheet_link_tag 'overhead'%>
   </head>
   <body>
      <div class="container" style="color:green;">
         <!-- Static navbar -->
         <nav class="navbar navbar-inverse" role="navigation">
            <div class="navbar-header">
               <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
               <span class="sr-only">Toggle navigation</span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               <span class="icon-bar"></span>
               </button>
               <a class="navbar-brand" href="/">Boardbank</a>
            </div>
            <div class="navbar-collapse collapse"  >
               <ul class="nav navbar-nav">
                  <li><a href="http://www.greaterpcf.org/">Greater Poweshiek Community Foundation</a></li>
                  <% if user_signed_in? %>
                  <% @id = current_user.id %>
                  <li><%= link_to 'Profile', controller: "profile", action: "show_user", id: @id %></li>
                  <li><a href="/organizations">Organizations</a></li>
                  <% else %>
                  <% end %>
                  <% if organization_signed_in? %>
                  <% @id = current_organization.id %>
                  <li><%= link_to 'Profile', controller: "profile", action: "show_org", id: @id %></li>
                  <li><a href="/organizations">Organizations</a></li>
                  <li><a href="/users">Users</a></li>
                  <% else %>
                  <% end %>
               </ul>
               <ul class="nav navbar-nav navbar-right">
               </ul>
            </div>
            <!--/.nav-collapse -->
         </nav>
         <div>
            <%if @error then %>
            <div class="alert alert-error"><%=@error%></div>
            <% end %>
            <%= yield %>
         </div>
      </div>
      <div id = 'content' class='container' >
         <div class= 'span9 main' >
            <div class = "jumbotron" >
               <html>
                  <style> table, th, td {
                     border: 1px solid black;
                     border-collapse: collapse;
                     }
                  </style>
                  
                  <div class="col-sm-3 col-md-3">
                  <%= form_tag search_users_path, class: 'navbar-form', method: :get do%>
                  <div class="input-group">
                     <%= text_field_tag :q, params[:q], size: 300, placeholder: "Search", class: "form-control"%>
                     <%= submit_tag 'Search', class: 'btn btn-success' %>
                  </div>
                  
                  <% end %>
               </div>
               
                  
                  <h2 class="listof">List of Users</h2>
                
                  <% if user_signed_in? %>
                  <h3> You do not have access to this area </h3>
                  <% elsif organization_signed_in? %>
                  <ul class="list-group">
                     <% if @users.empty?%>
                     <p style="font: 14pt/10pt Garamond, Georgia, serif; text-indent: 40px;"> 
                        User Not Found
                     </p>
                     <% else %>
                     <% @users.each do |user| %>
                     <% @id = user.id %>
                     <% @name = user.firstname.to_s + " " + user.lastname.to_s %>
                     <li href="#" class="list-group-item">
                        <%= link_to @name, controller: "profile", action: "show_user", id: @id %>
                        <%= user.email %>
                        <%= user.city %>
                        <%= user.education %>
                     </li>
                  </ul>
                  <% end %>
                  <% end %>
                  <% else %>
            </div>
         </div>
      </div>
      </body>
      </html>
      <% end %>
      </div>
      </div>
      </div>

